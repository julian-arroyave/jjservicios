@using JJServicios.Web.Models
@{
    ViewBag.Title = "Home Page";
}

@(Html.Kendo().Grid<SummaryViewModel>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.MovementId);
          columns.Bound(c => c.MovementDate);
          columns.Bound(c => c.MovementType);
          columns.Bound(c => c.AmountIn);
          columns.Bound(c => c.Observations);
          columns.Bound(c => c.Total);
      })
      .Groupable()
      .Scrollable()
      .Filterable()
      .Sortable()
      .Pageable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Agent_Read", "Home"))
      )
      )

