@using JJServicios.Web.Models
@{
    ViewBag.Title = "Home Page";
}

@(Html.Kendo().Grid<AgentViewModel>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.Name);
          columns.Bound(c => c.Email);
          columns.Bound(c => c.Password);
          columns.Bound(c => c.Id);
      })
      .Groupable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Agent_Read", "Home").Type(HttpVerbs.Get))
      )
)